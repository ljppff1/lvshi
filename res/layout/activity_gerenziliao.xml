<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/textco7"
 >
 

    <com.rvidda.cn.view.StickyScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:id="@+id/mScroll1"
        >
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                >
                    <RelativeLayout 
                        android:layout_width="fill_parent"
                        android:layout_height="150dp"
                                                android:id="@+id/mRlw1"
                        >
                        <ImageView 
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/background"
                            android:scaleType="fitXY"
                            />
                        <RelativeLayout 
                android:layout_width="fill_parent"
               style="@style/page_title"
                   android:tag="sticky"
               android:background="@color/black"
               android:paddingLeft="@dimen/p40"
               android:paddingRight="@dimen/p40"
                >
                        <ImageView
            android:id="@+id/mBtn_back"
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            />
                <TextView
                    style="@style/t_b_30"
                    android:id="@+id/mtv1"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:text="@string/grzl1" />
                
            </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout 
                        android:layout_width="fill_parent"
                        android:layout_below="@id/mRlw1"
                        android:layout_height="150dp"
                        android:background="@color/background"
                        >
                        <View 
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/background"
                            />
                        
                                            <RelativeLayout 
                        android:layout_width="fill_parent"
                        android:layout_height="65dp"
                        android:id="@+id/mRlw3"
                        android:layout_marginTop="@dimen/p3"
                        android:layout_alignParentBottom="true"
                        >
                        <LinearLayout 
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/mLLw1"
                            android:orientation="horizontal"
                            >
                            <RelativeLayout 
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:background="@color/background"
                                android:layout_height="fill_parent"
                                >
                                <RelativeLayout 
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    >
                              <TextView
                    style="@style/t_e1_24"
                    android:id="@+id/mTv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                   android:text="@string/grzl4" />
                              <TextView
                                  android:layout_marginTop="@dimen/p10"
                    style="@style/t_b1_24"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/mTv5"
                    android:layout_below="@id/mTv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:text="@string/grzl5" />
                              
                                </RelativeLayout>
                            </RelativeLayout>
                            <ImageView 
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:background="@drawable/suxian"
                                />      
                               <RelativeLayout 
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:background="@color/background"
                                android:layout_height="fill_parent"
                                >
                                <RelativeLayout 
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    >
                              <TextView
                    style="@style/t_e1_24"
                    android:id="@+id/mTv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                   android:text="@string/grzl6" />
                              <TextView
                                  android:layout_marginTop="@dimen/p10"
                    style="@style/t_b1_24"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/mTv7"
                    android:layout_below="@id/mTv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:text="@string/grzl7" />
                              
                                </RelativeLayout>
                            </RelativeLayout>
                        </LinearLayout>
                                    
                                          
                    </RelativeLayout> 
                            <ImageView 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/longline"
                android:layout_above="@id/mRlw3"   
                    
                    />
                            
                    </RelativeLayout>
                    
                    <com.rvidda.cn.view.CircleImageView
                    android:id="@+id/photo"
                    android:layout_width="85dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/people" />
                    <RelativeLayout 
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="136dp"
                        android:layout_marginTop="155dp"
                        >
                        <RelativeLayout 
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    >
                              <TextView
                    style="@style/t_d_30_1"
                    android:id="@+id/mTv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                   android:text="@string/grzl2" />
                              <TextView
                                  android:layout_marginTop="@dimen/p10"
                    style="@style/t_d_30_1"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/mTv3"
                    android:layout_below="@id/mTv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:text="@string/grzl3" />
                              
                                </RelativeLayout>
                    </RelativeLayout>
            </RelativeLayout>
                                            <ImageView 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/longline"
                    
                    />

               
                               <ImageView 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/longline"
                                    android:layout_marginTop="@dimen/p30"
                    
                    />
               
            <LinearLayout 
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:background="@color/background"
                >
                <RelativeLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/p40"
                    android:layout_marginTop="@dimen/p30"
                    android:layout_marginBottom="@dimen/p30"
                    >
                    <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/techang"
                        android:id="@+id/mIvtp1"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/p10"
                        android:layout_toRightOf="@id/mIvtp1"
                        android:layout_centerVertical="true"
                    style="@style/t_b1_28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                   android:text="@string/grzl8" />
                </RelativeLayout>
                <ImageView 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/longline"
                    />
                <RelativeLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >
                    <RelativeLayout 
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/p30"
                    android:layout_marginBottom="@dimen/p30"
                        android:layout_marginLeft="@dimen/p40"
                        android:layout_marginRight="@dimen/p40"
                        >
                        <com.rvidda.cn.view.FlowLayout
        android:id="@+id/mFFF"
        android:layout_width="fill_parent"
        android:layout_marginRight="4dp"
        android:layout_height="wrap_content" >
            </com.rvidda.cn.view.FlowLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
                        <ImageView 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/longline"
                                    android:layout_marginTop="@dimen/p30"
                    
                    />
               
    <LinearLayout 
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:background="@color/background"
                >
                <RelativeLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/p40"
                    android:layout_marginTop="@dimen/p30"
                    android:layout_marginBottom="@dimen/p30"
                    >
                                        <TextView
                        android:layout_centerVertical="true"
                    style="@style/t_b1_28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:text="@string/grzl9" />
                    
                    </RelativeLayout>
                                <ImageView 
                                 android:layout_marginLeft="@dimen/p40"
                                 android:layout_marginRight="@dimen/p40"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/longline"
                    />
                               <com.rvidda.cn.view.MyListView 
                                   android:layout_width="fill_parent"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/mListView"
                                                                    android:layout_marginLeft="@dimen/p40"
                                 android:layout_marginRight="@dimen/p40"
                                   
                                   ></com.rvidda.cn.view.MyListView>
                               
                               
                                      
                               <RelativeLayout 
                                   android:layout_width="fill_parent"
                                   android:id="@+id/mRlall"
                                   android:layout_height="wrap_content"
                                   android:layout_marginBottom="@dimen/p40"
                                   android:layout_marginTop="@dimen/p40"
                                   >
                               <TextView
                        android:layout_centerInParent="true"
                    style="@style/t_d_30_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:text="@string/grzl14" />
                               </RelativeLayout>
                </LinearLayout>
                
    
    
            
            
        </LinearLayout>
    </com.rvidda.cn.view.StickyScrollView>

    
</RelativeLayout>
